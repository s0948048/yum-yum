	@await Html.PartialAsync("_PartialBreadcrumb", (List<BreadcrumbItem>)ViewBag.Breadcrumbs)
</div>

@* 【大圖區塊】 *@
<div class="row text-center">
	<img class="mx-auto" src="/img/cherish/cover.jpg" alt="介紹惜食封面照片" style="width:85%;">
</div>





@* 【主題區塊】 *@

<!-- 分隔線  可直接調整 -->
