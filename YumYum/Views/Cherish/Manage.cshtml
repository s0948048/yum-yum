@section Scripts {
	<script>
		// 使用 jQuery 來接收觸發按鈕傳遞的資料，並更新 modal 內容
		$('#result-div').on('click', '.sendout', function (event) {
			var button = $(this); // 觸發的按鈕
			var result = $(this).parent().parent();
			var orderId = result.find('.order-id').text();
			var orderItem = result.find('.order-item').text();
			var orderState = result.find('.order-state').text();

			// console.log(orderId);
			// console.log(orderItem);
			// console.log(orderState);

			var modal = $('#sendout-modal');
			modal.find('.modal-header .id').text(orderId);
			modal.find('.modal-header h5').text(orderItem);
			modal.find('.modal-header .state').text(orderState);
			modal.find('.modal-footer .submit').on('click', function () {
				// 執行更新訂單資料的操作，例如發送 AJAX 請求
				// console.log(orderId + orderItem + orderState)

				// 取得表單資料
				// 用 AJAX 發送請求更新資料庫
				$.ajax({
					url: '/Cherish/SendoutOrder',
					method: 'POST',
					data: {
						orderId: orderId,
						orderState: orderState
					},
					success: function () {
						// 資料更新成功，關閉 modal 並顯示成功消息
						$(modal).modal('hide');
						alert('贈出成功！');
					},
					error: function () {
						$(modal).modal('hide');
						alert('目前訂單狀態無法贈出！');
					}
				});
			});
		});
	</script>
