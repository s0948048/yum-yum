						<option value="">蔬菜類</option>
						<option value="">水果類</option>
						<option value="">油與堅果類</option>
					</select>
					<div class="invalid-feedback">
						此為必填欄位
					</div>
				</div>
				<!-- 食材名稱 -->
				<div class="col-3">
					<label for="ingredient" class="form-label">食材名稱</label>
					<select class="form-select" id="ingredient">
						<option>-- 食材名稱 --</option>
						<option value="">麵包</option>
						<option value="">青蔥</option>
						<option value="">橘子</option>
						<option value="">堅果</option>
					</select>
					<div class="invalid-feedback">
						此為必填欄位
					</div>
				</div>
				<!-- 數量 -->
				<div class="col-3">
					<label for="quantity" class="form-label">數量</label>
					<div class="input-group">
						<button class="btn my-button" type="button" id="decrease-btn">-</button>
						<input type="number" class="form-control text-center" value="1" id="quantity" min="1"
							   readonly>
						<button class="btn my-button" type="button" id="increase-btn">+</button>
					</div>
					<div class="invalid-feedback">
						此為必填欄位
					</div>
				</div>
				<!-- 截止日 -->
				<div class="col-3">
					<label for="endDate" class="form-label">截止日</label>
