@section scripts {
	<script>
		// 增加按鈕的功能
		$("#increase-btn").on("click", function () {
			let input = parseInt($("#quantity").prop("value"));
			input = input + 1;
			$("#quantity").val(input);
		});

		// 減少按鈕的功能
		$("#decrease-btn").on("click", function () {
			let input = parseInt($("#quantity").prop("value"));
			input = Math.max(1, input - 1); // 確保不會低於 1
			$("#quantity").val(input);
		});
	</script>
}
